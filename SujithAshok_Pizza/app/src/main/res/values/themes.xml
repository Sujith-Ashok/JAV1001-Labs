<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SujithAshok_Pizza" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/bg_light</item>
        <item name="materialButtonStyle">@style/buttonBasic</item>
        <item name="android:textViewStyle">@style/TextHeader</item>
        <item name="radioButtonStyle">@style/RadioBtnStyle</item>
        <item name="checkboxStyle">@style/CheckStyle</item>
    </style>

    <style name="buttonBasic" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textSize">17sp</item>

    </style>

    <style name="TextHeader" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextHeader.Names">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TextHeader.Descriptions">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TextHeader.Options">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="RadioBtnStyle" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonTint">@color/primary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CheckStyle" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonTint">@color/primary</item>
        <item name="android:textSize">20sp</item>
    </style>


</resources>