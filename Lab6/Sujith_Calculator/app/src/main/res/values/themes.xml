<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sujith_Calculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FF6E40</item>
        <item name="colorPrimaryVariant">#FF5722</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/TextViewBasic</item>
        <item name="materialButtonStyle">@style/ButtonBasic</item>
    </style>

        <style name="ButtonBasic" parent="Widget.MaterialComponents.Button">
            <item name="android:backgroundTint">#0C0C0C</item>
            <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
            <item name="android:textColor">#FFFFFF</item>
        </style>

        <style name="ButtonBasic.FunctionButton">
            <item name="android:textColor">#FF6E40</item>
        </style>

        <style name="TextViewBasic" parent="Widget.AppCompat.TextView">
            <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
            <item name="android:textColor">#FFFFFF</item>
        </style>

        <style name="TextViewBasic.Result">
            <item name="android:textStyle">bold|italic</item>
        </style>

</resources>